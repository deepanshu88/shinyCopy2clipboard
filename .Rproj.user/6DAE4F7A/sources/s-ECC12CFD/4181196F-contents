write.docx <- function(orientation = 'portrait', file = 'report.docx') {
  paste0("
        var content = '<!DOCTYPE html>' + '<html><b>Testing...</b></html>;
        var converted = htmlDocx.asBlob(content, {orientation: '", orientation, "'});
        saveAs(converted, '", file, "');")
}

htmltools::browsable(
  tagList(list(
    tags$head(
      # you'll need to be very specific
      tags$style("p{font-size:200%;}"),
      tags$link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css",rel="stylesheet"),
      tags$script(src = "http://evidenceprime.github.io/html-docx-js/build/html-docx.js"),
      tags$script(src = "http://evidenceprime.github.io/html-docx-js/test/vendor/FileSaver.js")
    ),
    tags$body(

      tags$script(HTML(write.docx()))

    ),
    HTML('<i class="fas fa-copy"></i>'),
    HTML("<b>Testing...</b>")
  ))
)

